
@{

    ViewData["Title"] = "Products";
    string[] plist = { "Apple", "Banana", "Cherry", "Data", "Mango" };
}

<div class="alert alert-primary text-center ">
<h1 class="display-5">Products</h1>
</div>

<div>
    @for(int i=0; i<plist.Length;i++)
    {
      <h3 class="alert alert-success">@plist[i]</h3>
    }
   </div>

   <div class="text-center">
       <h3 class="text-primary"> @ViewBag.msg</h3>
       <br />
       <form asp-action="products" method="get">
        <input type="number" name="id" class ="form-control" placeholder="please type your number" />
        <button type="submit" class="btn btn-primary btn-md">Submit     </button>


       </form>
   </div>